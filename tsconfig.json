{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@atoms/*": ["./components/atoms/*"],
      "@molecules/*": ["./components/molecules/*"],
      "@organisms/*": ["./components/organisms/*"],
      "@particles/*": ["./components/particles/*"],
      "@templates/*": ["./components/templates/*"],
      "@helpers/*": ["./helpers/*"],
      "@pages/*": ["./pages/*"],
      "@static/*": ["./static/*"],
      "@mocks/*": ["./__mocks__/*"],
      "@services/*": ["./services/*"],
      "@store/*": ["./store/*"],
      "@customTypes/*": ["./customTypes/*"],
      "@utils/*": ["./utils/*"],
      "@hooks/*": ["./hooks/*"]
    },
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "include": [
    "src",
    "src/customTypes/declarations.d.ts",
    "src/__mocks__/images",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ],
  "exclude": ["node_modules", "public", "static"],
  "skipLibCheck": true
}
